{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/MaddenImporter.Excel/maddenimporter.excel.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "${workspaceFolder}/MaddenImporter.Excel/maddenimporter.excel.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Publish",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "publish",
                "-p:PublishSingleFile=true",
                "-p:PublishTrimmed=true", 
                "--self-contained",
                "true",
                "-c",
                "Release",
                "-o",
                "${input:outputDirectory}",
                "-r",
                "${input:targetPlatform}",
                "${workspaceFolder}/MaddenImporter.Excel/"
            ],
            "problemMatcher": []
        },
        {
            "label": "Zip",
            "type": "shell",
            "command": "zip ${input:outputDirectory}${input:targetPlatform} ${input:outputDirectory}maddenimporter.excel",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Zip Windows",
            "type": "shell",
            "command": "zip ./dist/win-x64 ./dist/win-x64/maddenimporter.excel.exe",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "${workspaceFolder}/maddenimporter.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        }
    ],
    "inputs": [
        {
            "id": "outputDirectory",
            "description": "The directory to output the distributable to.",
            "type": "pickString",
            "default": "./dist/win-x64/",
            "options": [
                "./dist/win-x64/",
                "./dist/osx/",
                "./dist/linux-x64/",
                "./dist/linux-arm/"
            ]
        },
        {
            "id": "targetPlatform",
            "description": "The target platform.",
            "type": "pickString",
            "default": "win10-x64",
            "options": [
                "win10-x64",
                "osx-x64",
                "linux-x64",
                "linux-arm"
            ]
        }
    ]
}